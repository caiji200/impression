<resources>

    <style name="frame_toolbar_title">
        <item name="android:textSize">@dimen/frame_toolbar_title_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="hint_style">
        <item name="android:textColor">#1a1a1a</item>
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="frame_tips">
        <item name="android:textSize">@dimen/frame_tips_text_size</item>
        <item name="android:textColor">@color/frame_tips_color</item>
    </style>

    <style name="frame_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/frame_custom_divider_height</item>
        <item name="android:background">@color/frame_divider_color</item>
    </style>

    <style name="frame_error_text">
        <item name="android:textSize">@dimen/frame_error_tips_text_size</item>
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:textColor">@color/frame_error_text_color</item>
        <item name="android:layout_weight">2.3</item>
    </style>

    <style name="frame_list_divider">
        <item name="android:dividerHeight">@dimen/dp_1</item>
        <item name="android:divider">@color/frame_divider_color</item>
        <item name="android:listSelector">@drawable/frame_custom_layout_selector</item>
    </style>

    <style name="frame_button_style">
        <item name="android:layout_height">@dimen/frame_btn_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/frame_primary_bt_round_corner_selector</item>
    </style>
</resources>
